{% extends "layout.jinja2" %}

{% block content %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Register</div>
                        <div class="panel-body">
                            {% if message %}
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                {{ message }}
                            </div>
                            {% endif %}
                            <form class="form-horizontal" method="POST" action="{{request.route_url('register')}}">
                                <div class="form-group{{ ' has-error' if message and not name }}">
                                    <label for="name" class="col-md-4 control-label">Name</label>
                                    <div class="col-md-6">
                                        <input id="name" type="text" class="form-control" name="name" value="{{ name }}" required autofocus>
                                    </div>
                                </div>

                                <div class="form-group{{ ' has-error' if message and not email }}">
                                    <label for="email" class="col-md-4 control-label">Email address</label>
                                    <div class="col-md-6">
                                        <input id="email" type="email" class="form-control" name="email" value="{{ email }}" required>
                                    </div>
                                </div>

                                <div class="form-group{{ ' has-error' if 'password' in message }}">
                                    <label for="password" class="col-md-4 control-label">Password</label>
                                    <div class="col-md-6">
                                        <input id="password" type="password" class="form-control" name="password" required>
                                    </div>
                                </div>

                                <div class="form-group{{ ' has-error' if 'password' in message }}">
                                    <label for="password-confirm" class="col-md-4 control-label">Confirm password</label>
                                    <div class="col-md-6">
                                        <input id="password-confirm" type="password" class="form-control" name="password_confirmation" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-6 col-md-offset-4">
                                        <input type="submit" name="submit" value="Register" class="btn btn-primary">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock content %}