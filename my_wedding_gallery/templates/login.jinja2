{% extends "layout.jinja2" %}

{% block content %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Login</div>

                        <div class="panel-body">
                            {% if failed_attempt %}
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                Invalid email address or password
                            </div>
                            {% endif %}
                            <form class="form-horizontal" method="POST" action="{{ request.route_url('login') }}">
                                <div class="form-group{{ ' has error' if failed_attempt }}">
                                    <label for="email" class="col-md-4 control-label">Email address</label>
                                    <div class="col-md-6">
                                        <input id="email" type="email" class="form-control" name="email" value="{{ email }}" required autofocus>
                                    </div>
                                </div>

                                <div class="form-group{{ ' has error' if failed_attempt }}">
                                    <label for="password" class="col-md-4 control-label">Password</label>
                                    <div class="col-md-6">
                                        <input id="password" type="password" class="form-control" name="password" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-8 col-md-offset-4">
                                        <input type="submit" name="submit" value="Login" class="btn btn-primary">
                                        <a class="btn btn-link" href="{{ request.route_url('register') }}">
                                            Register
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock content %}
